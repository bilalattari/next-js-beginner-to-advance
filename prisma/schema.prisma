generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://127.0.0.1:27017/crud"
}

model Todo {
  id        String   @id @default(cuid()) @map("_id")
  task      String
  title     String
  completed Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
